{
  "compilerOptions": {
    "target": "ES2020",
    "module":"commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "./node_modules/@types", "./src/types"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "./src/**/*", "./test/**/*"
  ],
  "exclude": ["node_modules"],
  "extends": "@tsconfig/node14/tsconfig.json"
}